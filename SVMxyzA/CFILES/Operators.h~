#pragma once
#ifndef Operators_H
#define Operators_H
#include "Input.h"
#include <Eigen> 
using namespace Eigen;

class Operators
{
private:
	int npar;
	int spin_ncmp;
	std::vector<double> spin_coef;
	std::vector< std::vector<int> > sz;

	int isospin_ncmp;
	std::vector<double> isospin_coef;
	std::vector< std::vector<int> > tz;
	Input input;
public:
	Operators(Input &input);
	double O(int i, int j, VectorXi P, int kind);
	double SpinOp(std::vector<int> sz1, std::vector<int> sz2, int i, int j, VectorXi P, int kind);
	double IsospinOp(std::vector<int> tz1, std::vector<int> tz2, int i, int j, VectorXi P, int kind);
	double O_0(int i1, int i2, int i3, int i4);
	double O_1(int i1, int i2, int i3, int i4);
	~Operators();
};
#endif 
